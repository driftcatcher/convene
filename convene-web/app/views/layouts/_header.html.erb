<header class="header">
  <div class="items-container">
    <h1 class="workspace-title"><%= current_workspace&.name %></h1>

    <div class="profile-menu" data-controller="profile-menu" data-action="click->profile-menu#toggle" data-target="profile-menu.wrapper">
      <figure class="avatar">
        <img src="<%=current_person.avatar_url%>" alt="<%= current_person.name %>">
        <figcaption><%= current_person.name %></figcaption>
      </figure>
      <span class="icon-solid phone-alt-icon"></span>
      <ul class="action-list">
        <li>Log Out</li>
      </ul>
    </div>
  </div>
</header>
